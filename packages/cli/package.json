{
  "name": "pyrajs-cli",
  "version": "0.0.3",
  "description": "ğŸ”¥ @Pyra/cli - A cli tool for using core cli commands",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "pyra": "./dist/bin.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup src/bin.ts src/index.ts src/scaffold.ts src/pm.ts src/init.ts --dts --format esm --out-dir dist && cp -r templates dist/templates",
    "dev:run": "tsx src/bin.ts",
    "dev:link": "pnpm build && pnpm link -g",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "pyra",
    "build-tool",
    "bundler",
    "esbuild",
    "vite-alternative",
    "dev-server",
    "hmr",
    "typescript",
    "esm",
    "frontend",
    "cli"
  ],
  "author": "Nathaniel Paz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simpleboi/Pyra",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/Simpleboi/Pyra#readme",
  "bugs": {
    "url": "https://github.com/Simpleboi/Pyra/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "pyrajs-core": "^0.0.2",
    "pyrajs-shared": "^0.0.2",
    "commander": "^12.1.0",
    "@inquirer/prompts": "^7.2.0"
  }
}
