{
  "name": "@pyra/core",
  "version": "0.0.1",
  "description": "Core bundler engine for Pyra.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --out-dir dist",
    "dev": "tsup src/index.ts --dts --format esm --out-dir dist --watch"
  },
  "keywords": ["bundler", "build-tool", "dev-server"],
  "author": "Nathaniel Paz",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@pyra/shared": "workspace:*",
    "chokidar": "^4.0.3",
    "esbuild": "^0.24.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "@types/node": "^22.10.5"
  }
}
